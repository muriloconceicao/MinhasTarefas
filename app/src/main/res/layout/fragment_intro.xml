<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/txtOla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Bem-vindo,"
        android:textColor="@color/primaryColor"
        android:textSize="58sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtDigiteSeuNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite seu nome"
        android:textColor="@color/primaryColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtOla"
        app:layout_constraintTop_toBottomOf="@+id/txtOla"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_edittext"
        android:ems="14"
        android:importantForAutofill="no"
        android:maxLength="14"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/txtOla"
        app:layout_constraintStart_toStartOf="@+id/txtOla"
        app:layout_constraintTop_toBottomOf="@+id/txtDigiteSeuNome"
        tools:ignore="LabelFor,TextFields" />

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:background="@drawable/rectangle_solid_button"
        android:enabled="true"
        android:text="Entrar"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextNome"
        app:layout_constraintStart_toStartOf="@+id/editTextNome"
        app:layout_constraintTop_toBottomOf="@+id/editTextNome"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>